{
  "manifest_version": 3,
  "name": "Lockinator", 
  "version": "1.0", 
  "description": "Alerts when blacklisted tabs are open and logs tabs.",
  "permissions": [
    "tabs",
    "storage",
    "notifications",
    "alarms",
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon-16.png",
      "32": "icon-16.png",
      "48": "icon-16.png",
      "128": "icon-16.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
